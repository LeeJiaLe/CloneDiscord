<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/message_date_top_view"
        android:gravity="center"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#888"
            android:layout_weight="1"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#888"
            android:text="May 9, 2018"
            android:textSize="12sp"
            android:textStyle="bold"
            android:id="@+id/message_date_top"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#888"
            android:layout_weight="1"
            />
    </LinearLayout>
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/message_date_top_view"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4dp"
        android:id="@+id/message_content_view">
        <discord.clone.com.clonediscord.RoundProfilePic
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginTop="4dp"
            android:id="@+id/message_profile_pic"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:rpp_img="@drawable/sleep_gz1"
            app:rpp_state="2"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/message_profile_pic"
            android:gravity="bottom"
            android:id="@+id/message_user_detail"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"
                android:text="Sample User"
                android:textColor="#ff4455"
                android:id="@+id/message_user_name"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/message_bot"
                android:visibility="invisible"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="Today at 03:55"
                android:id="@+id/message_date"/>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/message_user_detail"
            app:layout_constraintStart_toEndOf="@id/message_profile_pic"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            android:textColor="#ddd"
            android:id="@+id/message_main_content"
            android:text="Some testing text, long, lng, short, testing, testing testin"
            />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>