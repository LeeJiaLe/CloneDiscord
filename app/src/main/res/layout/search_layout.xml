<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/action_search_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:background="#00000000"
            android:drawablePadding="3dp"
            android:drawableStart="@drawable/ic_arrow_back_grey"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintStart_toEndOf="@+id/btnBack"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="#bbb"
            android:background="@null"
            android:hint="Search in server"
            android:textColorHint="#888"
            android:textCursorDrawable="@null"
            tools:layout_editor_absoluteY="3dp" />


    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_search_bar">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textColor="#888"
            android:text="SEARCH OPTION"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center|center"
                android:textSize="18sp"
                android:textColor="#aaa"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:drawableStart="@drawable/ic_friend"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#eee"
                android:text="from:"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#888"
                android:text="user"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center|center"
                android:textSize="18sp"
                android:textColor="#aaa"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:drawableStart="@drawable/ic_at_sign"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#eee"
                android:text="mention:"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#888"
                android:text="user"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center|center"
                android:textSize="18sp"
                android:textColor="#aaa"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:drawableStart="@drawable/ic_attachment_white"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#eee"
                android:text="has:"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#888"
                android:text="link, embed or file"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:gravity="center|center"
                android:textSize="18sp"
                android:textColor="#aaa"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:drawableStart="@drawable/ic_hash"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#eee"
                android:text="in:"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:gravity="start|center"
                android:textSize="16sp"
                android:textColor="#888"
                android:text="channel"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>